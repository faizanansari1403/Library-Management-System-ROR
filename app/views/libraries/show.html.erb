
<p id="notice"><%= notice %></p>
  <div class="col-md-4" style="margin-left: 40%">
  <strong>Name:</strong>
  <%= @library.name %>
  </div>

  <div class="col-md-4" style="margin-left: 40%">
  <strong>University:</strong>
  <%= @library.university %>
  </div>

  <div class="col-md-4" style="margin-left: 40%">
  <strong>Location:</strong>
  <%= @library.location %>
  </div>

  <div class="col-md-4" style="margin-left: 40%">
  <strong>Borrow limit:</strong>
  <%= @library.borrow_limit %>
  </div>

  <div class="col-md-4" style="margin-left: 40%">
  <strong>Overdue fines:</strong>
  <%= @library.overdue_fines %>
  </div>
  <br/>

<% if current_admin.nil? %>
<%= link_to 'Edit', edit_library_path(@library) %> |
<%= link_to 'Back', libraries_path,style:"margin-left: 40%",class:"btn btn-dark" %>
<% else %>
<%= link_to 'Back', show_libraries_path,style:"margin-left: 40%",class:"btn btn-dark"%>
<% end %>
