    <%= form.label :borrow_limit,class:"form-label" %>
    <%= form.number_field :borrow_limit,class:"form-control" %>
  </div>
  <div class="col-md-4">
    <%= form.label :overdue_fines,class:"form-label" %>
    <%= form.text_field :overdue_fines,class:"form-control" %>
