
<div class="container">
    <div class="card">
        <div class="d-flex justify-content-center">
            <h4>Sign Up</h4>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form">
            <label class="d-flex justify-content-between align-items-center"><span>Name</span></label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Your Name" %>
        </div>
        <div class="form">
            <label class="d-flex justify-content-between align-items-center"><span>Email</span></label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email address" %>
        </div>
        
        <div class="form">

                <label class="d-flex justify-content-between align-items-center"><span>Password</span></label>
                <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password" %>
        </div>

       <div class="form">
           <label class="d-flex justify-content-between align-items-center"><span>Confirm Password</span></label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password" %>
       </div>
        &nbsp;  &nbsp;
        <div class="login-button">
        <%= f.submit "Submit", class:"btn btn-success w-100" %>
        </div>
        <% end %>
          &nbsp;  &nbsp; 
        <%= render "admins/shared/links" %>
    </div>
</div>

<%# Css Part %>
<style>
body{
    background-color:#eee;
}

.container{
    height:100vh;
    display:flex;
    justify-content:center;
    align-items:center;
}


.card {
    width: 760px;
    height: 700px;
    background-color: #fff;
    border-radius: 30px;
    border: none;
    padding: 16px;
}

.form{
    margin-top:15px;
}

.form label{
    font-weight:700;
    font-size:14px;
}

.form input {
    height: 50px;
    width: 700px;
    border-radius: 10px;
    border: 2px solid #eee;
    transition: all 0.9s;
}

.form input:focus{
    box-shadow:none;
    border:2px solid #2541B2;
}

.social-button{
    height:45px;
    background-color:#2541B2;
}

.login-button{
    margin-top:15px;
}

.login-button button{
    height:45px;
}
</style>
